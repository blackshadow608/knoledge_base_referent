//синонимы
sc_node_not_relation -> concept_internet;;
concept_internet => nrel_main_idtf :[Интернет] (* <- lang_ru;; *);;
concept_internet => nrel_main_idtf :[Internet](* <- lang_en;; *);;

//определение 

concept_internet <- rrel_key_sc_element: 
        ...
	(*
	=> nrel_main_idtf: [Опр.(интернет)]  (* <- lang_ru;; *);;
	<- sc_explanation;; 
	<= nrel_sc_text_translation: 
		...
		(*
		-> rrel_example: 
			[Интерне́т  — всемирная система объединённых компьютерных сетей для хранения и передачи информации.]
			(* <- lang_ru;; *);;
		*);; 
	*);;


