//синонимы
sc_node_not_relation -> concept_email;;
concept_email => nrel_main_idtf :[электронная почта] (* <- lang_ru;; *);;
concept_email => nrel_main_idtf :[email](* <- lang_en;; *);;

//определение 


concept_email <- rrel_key_sc_element: 
        ...
	(*
	=> nrel_main_idtf: [Опр.(электронная почта)]  (* <- lang_ru;; *);;
	<- sc_explanation;; 
	<= nrel_sc_text_translation: 
		...
		(*
		-> rrel_example: 
			[Электро́нная по́чта (англ. email, e-mail, от англ. electronic mail) — технология и предоставляемые ею услуги по 				пересылке и получению электронных сообщений (называемых «письма» или «электронные письма») по распределённой (в том 				числе глобальной) компьютерной сети.]
			(* <- lang_ru;; *);;
		*);; 
	*);;


// иерархия связи с другими понтиями 

concept_service -> concept_email;;


//утверждения


concept_email <- rrel_key_sc_element: 
...
(*
=> nrel_main_idtf: [Утв.(электронная почта;бумажная почта)] (* <- lang_ru;; *);;
<- sc_statement;;
<= nrel_sc_text_translation: 
...
(*
-> rrel_example: 
[Электронная почта по составу элементов и принципу работы практически повторяет систему обычной (бумажной) почты, заимствуя как термины (почта, письмо, конверт, вложение, ящик, доставка и другие), так и характерные особенности — простоту использования, задержки передачи сообщений, достаточную надёжность и в то же время отсутствие гарантии доставки.]
(* <- lang_ru;; *);;
*);;
*);

... 
(*
=> nrel_main_idtf: [Утв.(электронная почта;почтовый ящик)] (* <- lang_ru;; *);;
<- sc_statement;;
<= nrel_sc_text_translation: 
...
(*
-> rrel_example: 
[Недостатки электронной почты: наличие такого явления, как спам (массовые рекламные и вирусные рассылки); теоретическая невозможность гарантированной доставки конкретного письма; возможные задержки доставки сообщения (до нескольких суток); ограничения на размер одного сообщения и на общий размер сообщений в почтовом ящике (персональные для пользователей).](* <- lang_ru;; *);;
*);;
*);;

