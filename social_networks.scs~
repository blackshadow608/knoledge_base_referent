//синонимы
sc_node_not_relation -> concept_social_networks;;
concept_social_networks => nrel_main_idtf :[социальная сеть] (* <- lang_ru;; *);;
concept_social_networks => nrel_main_idtf :[social networks](* <- lang_en;; *);;

//определение 

concept_social_networks <- rrel_key_sc_element: 
        ...
	(*
	=> nrel_main_idtf: [Опр.(социальная сеть)]  (* <- lang_ru;; *);;
	<- sc_explanation;; 
	<= nrel_sc_text_translation: 
		...
		(*
		-> rrel_example: 
			[Социальная сеть – это онлайн-сервис, сайт, позволяющий создавать социальные связи, строить взаимоотношения, 				распространять информацию и др.]
			(* <- lang_ru;; *);;
		*);; 
	*);;


// иерархия связи с другими понтиями   
concept_online_chat ->  concept_social_networks;;
concept_service -> concept_online_chat;;s

