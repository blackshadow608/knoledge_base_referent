
sc_node_not_relation -> sociopolitical_movement;;

sociopolitical_movement => nrel_main_idtf:
	[общественно-политическое движение]
	(* <- lang_ru;; *);
	[sociopolitical movement]
	(* <- lang_en;;	*);;

sociopolitical_movement
	<- rrel_key_sc_element:
	...
	(*
	=> nrel_main_idtf: [Опр.(общественно-политическое движение)]  (* <- lang_ru;; *);;
	<-sc_explanation;;
	<=nrel_sc_text_translation:
		...

		(*
		->rrel_example:
			[Понятие «общественно-политические движения» включает различные объединения граждан, ассоциации, союзы и т.п., которые не входят в государственные и партийные структуры, но являются субъектами политичес­кой жизни, сочетая в разной степени функции сотрудничества, оппонирования и критики, оппозиции по отношению к государственным институтам и политическим партиям.]
			(*
			<- lang_ru;;
			*);;
		*);;
	*);;

